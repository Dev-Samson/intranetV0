<form action="{{ path('sonata_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password form-horizontal">
  {{ form_start(form, {'attr':{'class': 'form-horizontal'} }) }}
        <div class="form-group">
            {{form_label(form.current_password, null, { 'label_attr': {'class': 'col-sm-2 control-label'} })}}
            <div class="col-sm-8">
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
       
        {% for passwordField in form.new %}
            <div class="form-group">
                {{ form_label(passwordField, null, { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                <div class="col-sm-8">
                    {{ form_widget(passwordField, { 'attr': {'class': 'form-input'} }) }}
                </div>
            </div>
        {% endfor %}
            
    <button type="submit" class="btn btn-danger pull-right"><i class="icon-lock icon-white glyphicon glyphicon-lock"></i>&nbsp;{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</button>
{{ form_end(form) }}