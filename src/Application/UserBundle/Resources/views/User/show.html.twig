{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Address_num</th>
                <td>{{ entity.addressnum }}</td>
            </tr>
            <tr>
                <th>Address_build</th>
                <td>{{ entity.addressbuild }}</td>
            </tr>
            <tr>
                <th>Address_locality</th>
                <td>{{ entity.addresslocality }}</td>
            </tr>
            <tr>
                <th>Postal_code</th>
                <td>{{ entity.postalcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Cellphone</th>
                <td>{{ entity.cellphone }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
