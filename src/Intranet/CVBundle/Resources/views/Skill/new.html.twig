{% extends "IntranetAppBundle::base.html.twig" %}

{%block page_header %}Ajouter des compétences{%endblock%}
{%block page_description %}{%endblock%}

{% block body -%}
    <div class="row">
        <div class="col-md-8">
              <!-- Horizontal Form -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Vos compétences</h3>
                </div><!-- /.box-header -->
                  {{ form_start(form, {'attr':{'class': 'form-horizontal'} }) }}
                  <div class="box-body">
                    <div class="form-group">
                        {{form_label(form.category)}}
                        <div class="col-sm-8">
                            {{ form_widget(form.category) }}
                        </div>
                    </div> 
                    <div class="form-group">
                        {{form_label(form.name)}}
                        <div class="col-sm-8">
                            {{ form_widget(form.name) }}
                        </div>
                    </div>
                  </div>
                  <div class="box-footer">
                    {{ form_widget(form.save_and_add,{'attr':{'class':'btn btn-primary pull-right'} }) }}
                    {{ form_widget(form.submit,{'attr':{'class':'btn btn-primary primary-left'} }) }}
                  </div>
                  {{form_end(form)}}
              </div>
        </div>
        <div class="col-md-4">
              <!-- Horizontal Form -->
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title">Aide / Exemple</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                  <div class="box-body">
                      <b>Category:</b> Javascript<br/>
                      <b>Name:</b> Node.js<br/>
                  </div>
              </div>
        </div>
    </div>
{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('bundles/intranetapp/css/adminLTE/plugins/datepicker/datepicker3.css')}}">
    <style>
        .ui-autocomplete {
        position: absolute;
        z-index: 1000;
        cursor: default;
        padding: 0;
        margin-top: 2px;
        list-style: none;
        background-color: #ffffff;
        border: 1px solid #ccc;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
           -moz-box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
                box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    }
    .ui-autocomplete > li {
      padding: 3px 20px;
    }
    .ui-autocomplete > li.ui-state-focus {
      background-color: #DDD;
    }
    .ui-helper-hidden-accessible {
      display: none;
    }    
    </style>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{asset('bundles/intranetcv/js/experience.js')}}"> </script>
    <script type="text/javascript" src="{{asset('bundles/intranetapp/js/adminLTE/plugins/datepicker/bootstrap-datepicker.js')}}"> </script>
    <script type="text/javascript" src="{{asset('bundles/intranetapp/js/adminLTE/plugins/datepicker/bootstrap-datepicker.fr.js')}}"> </script>
    <script type="text/javascript" src="{{asset('bundles/intranetapp/js/jQuery/jquery-ui.min.js')}}"> </script>
    <script type="text/javascript" >
       
        $( document).delegate( ".datepicker","focusin", function() {
           $(this).datepicker({
               format: 'dd/mm/yyyy',
           });
        });
        $(function() {
            var availableTags = [
              "Node.js", "Symfony2", "Symfony1.4", "Jquery.js","Prototype.js","UML"
            ];

            $(".autocomplete").autocomplete({
              source: availableTags
            });
        });
        
    
    </script>
{% endblock %}