{% extends "IntranetAppBundle::base.html.twig" %}

{%block page_header %}Ajouter des expériences{%endblock%}
{%block page_description %}Etape 2/2{%endblock%}

{% block body -%}
    <div class="row">
        <div class="col-md-8">
              <!-- Horizontal Form -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Vos experiences</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                 {{ form_start(form, {'attr':{'class': 'form-horizontal'} }) }}
                  <div class="box-body">
                    <div class="form-group">
                        {{form_label(form.title)}}
                        <div class="col-sm-8">
                            {{ form_widget(form.title) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{form_label(form.start)}}
                        <div class="col-sm-8">
                            {{ form_widget(form.start) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{form_label(form.end)}}
                        <div class="col-sm-8">
                            {{ form_widget(form.end) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{form_label(form.place)}}
                        <div class="col-sm-8">
                            {{ form_widget(form.place) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{form_label(form.role)}}
                        <div class="col-sm-8">
                            {{ form_widget(form.role) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{form_label(form.activities)}}
                        <div class="col-sm-8">
                            {{ form_widget(form.activities) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{form_label(form.environment)}}
                        <div class="col-sm-8">
                            {{ form_widget(form.environment) }}
                        </div>
                    </div>
                  </div>
                   
                  <div class="box-footer">
                    {{ form_widget(form.save_and_add,{'attr':{'class':'btn btn-primary pull-right'} }) }}
                    {{ form_widget(form.submit,{'attr':{'class':'btn btn-primary pull-left'} }) }}
                  </div>
                    {%do form.activities.setRendered(true)%} 
                 {{ form_end(form)}}
              </div>
        </div>
        <div class="col-md-4">
              <!-- Horizontal Form -->
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title">Aide / Exemple</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                  <div class="box-body">
                      <b>Intitulé du poste:</b> Développeur web<br/>
                      <b>Début:</b> 10/01/2001<br/>
                      <b>Fin:</b> 01/09/2007<br/>
                      <b>Role:</b> <br/>
                      <b>Activités:</b> <br/>
                            - Analyse et recueil des besoins client<br/>
                            - Réalisation d'interfaces graphiques, backend, frontend<br/>
                      <b>Résultat:</b> <br/>
                      <b>Environnement:</b> Windows, Apache, Mysql
                  </div>
              </div>
        </div>
    </div>
{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('bundles/intranetapp/css/adminLTE/plugins/datepicker/datepicker3.css')}}">
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{asset('bundles/intranetcv/js/experience.js')}}"> </script>
    <script type="text/javascript" src="{{asset('bundles/intranetapp/js/adminLTE/plugins/datepicker/bootstrap-datepicker.js')}}"> </script>
    <script type="text/javascript" src="{{asset('bundles/intranetapp/js/adminLTE/plugins/datepicker/bootstrap-datepicker.fr.js')}}"> </script>
    <script type="text/javascript" >
       
        $( document).delegate( ".datepicker","focusin", function() {
           $(this).datepicker({
               format: 'dd/mm/yyyy',
           });
        });
        
    
    </script>
{% endblock %}